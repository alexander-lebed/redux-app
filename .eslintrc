{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "import/no-named-as-default": "off",
    "padded-blocks": "off",
    "comma-dangle": ["error", "never"],
    "indent": [2, 4]
  },
  "extends": ["airbnb-base"]
}